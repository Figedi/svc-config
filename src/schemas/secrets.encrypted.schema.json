{
  "$id": "http://figedi.de/schemas/secrets.encrypted.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "apiKeys": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "sops": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "mac": {
          "type": "string"
        },
        "gcp_kms": {
          "type": "array",
          "items": true
        }
      },
      "additionalProperties": true,
      "required": ["version", "mac", "gcp_kms"]

    }

  },
  "required": ["sops"]
}
